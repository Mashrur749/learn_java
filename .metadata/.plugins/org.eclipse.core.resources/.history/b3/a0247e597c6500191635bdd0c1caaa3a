package com.newthinktank;

import java.util.*;

import java.util.stream.IntStream;

public class HelloWorld {
	static Scanner sc = new Scanner(System.in);
	
	final double SHORTPI = 3.14159;
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		StringBuilder sb = new 
				StringBuilder("I'm a string builder");
		System.out.println(sb.length());
		System.out.println(sb.capacity());
		System.out.println(sb.append(" Yeah"));
		System.out.println(sb.insert(6, "big "));
		System.out.println(sb.replace(6, 9, "wig"));
		System.out.println(sb.substring(6,9));
		System.out.println(sb.delete(6,9));
		
	}

}
